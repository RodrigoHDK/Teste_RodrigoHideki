@model Biblioteca.Models.Livros

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button>
    <h3 class="modal-title">Editar Livro</h3>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <div class="modal-body">

        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(m => Model.Nome, new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.Nome, new { @class = "form-control required" })
                    <div>
                        @Html.ValidationMessageFor(m => m.Nome)
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => Model.Descricao, new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.Descricao, new { @class = "form-control required" })
                    <div>
                        @Html.ValidationMessageFor(m => m.Descricao)
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => Model.Editora, new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.Editora, new { @class = "form-control required" })
                    <div>
                        @Html.ValidationMessageFor(m => m.Editora)
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => Model.Ano, new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.Ano, new { @class = "form-control required" })
                    <div>
                        @Html.ValidationMessageFor(m => m.Ano)
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => Model.Autor, new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.Autor, new { @class = "form-control required" })
                    <div>
                        @Html.ValidationMessageFor(m => m.Autor)
                    </div>
                </div>
            </div>


        </div>
    </div>

    <div class="modal-footer">
        <span id="progress" class="text-center" style="display: none;">
            <img src="/images/wait.gif" alt="wait" />
            Wait..
        </span>

        <input class="btn btn-primary" type="submit" value="Salvar" />
        <button class="btn btn-warning" data-dismiss="modal">Fechar</button>
    </div>
}
<script>
        $("form").removeData("validator");
        $("form").removeData("unobtrusiveValidation");
        $.validator.unobtrusive.parse("form");
</script>
